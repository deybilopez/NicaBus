                @Html.DisplayFor(modelItem => item.acountId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nameBus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lugarEstacionamiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costo)
            </td>
